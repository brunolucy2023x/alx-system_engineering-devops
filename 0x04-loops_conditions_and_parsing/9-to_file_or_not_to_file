#!/usr/bin/env bash
# Write a Bash script that displays:
# script that gives you information about the Best School file.

i="school"
if [ -e "$i" ]
then
    echo "$i school file exists"
    if [ -s "$i" ]
    then
	echo "$i school file is not empty"
    else
	echo "$i school file is empty"
    fi
    if [ -f "$i" ]
    then
	echo "$i school is a regular file"
    fi
else
    echo "$i school file does not exist"
fi
